---
// src/layouts/MainLayout.astro
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} - Aditya Singh</title>
    <meta name="description" content="Devpreneur and Builder" />
  </head>
  <body class="min-h-screen bg-slate-950 text-slate-50">
    <slot />
  </body>
</html>
